{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 10,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux",
      "hidden": false,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-gcc-ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "windows",
      "hidden": false,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-vs",
        "cacheVariables": {
            "CMAKE_C_COMPILER": "cl.exe",
            "CMAKE_CXX_COMPILER": "cl.exe"
        }
    }
  ]
}